<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE validators PUBLIC "-//Apache Struts//XWork Validator 1.0.3//EN" "http://struts.apache.org/dtds/xwork-validator-1.0.3.dtd">

<validators>

	<validator  type="requiredstring">
		<param name="fieldname">personne.firstName</param>
		<message>first Name is required.</message>	
	</validator>
	
	
		<validator type="requiredstring">
		  <param name="fieldname">personne.lastName</param>
	      <message>Last Name is required.</message>
		</validator>
	
	
	<validator type="requiredstring">
		    <param name="fieldname">personne.title</param>
			<message>title is required.</message>
	</validator>
	
		<validator type="int">
		    <param name="fieldname">personne.age</param>
			<param name="min">29</param>
			<param name="max">64</param>
			<message> Age must be in between 28 and 65</message>
		</validator>


</validators>