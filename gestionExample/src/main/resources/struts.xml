<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts  
Configuration 2.1//EN" "http://struts.apache.org/dtds/struts-2.1.dtd">
<struts>
	<constant name="struts.devMode" value="false" />
	<constant name="struts.enable.DynamicMethodInvocation" value="false" />
	<constant name = "struts.custom.i18n.resources" value = "global" />
	<package name="default" extends="struts-default">

		<action name="index">
			<result>/index.jsp</result>
		</action>

		<action name="hello" class="fr.formation.inti.action.HelloStrutsAction1" method="execute">
			<result name="success">/helloStruts.jsp</result>
			<result name="input">/helloStruts.jsp </result>
			<result name="error">/index.jsp </result>
		</action>
		
		<action name="locale" class="fr.formation.inti.action.Locale" method="execute">
		 <result name = "success">/index.jsp</result>
		 <result name="input">/helloStruts.jsp </result>
		</action>

        
       
	</package>


</struts>
